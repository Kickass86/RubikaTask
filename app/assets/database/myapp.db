INSERT INTO sqlite_master (type, name, tbl_name, rootpage, sql) VALUES ('table', 'post', 'post', 9, 'CREATE TABLE "post"
(
	id integer,
	caption text,
	name text,
	time text,
	picture text,
	view_count int,
	like_count int
)');
INSERT INTO sqlite_master (type, name, tbl_name, rootpage, sql) VALUES ('table', 'comment', 'comment', 3, 'CREATE TABLE "comment"
(
	id long
		constraint post_id
			references post (id),
	content string,
	time string,
	name string
)');


INSERT INTO post (id, caption, name, time, picture, view_count, like_count) VALUES (1, 'خوشبختی بالا پایین داره.
خوشبختی اون چیزی نیست که تو فکر میکنی.
چیز دائمی و همیشگی‌ای نیست.
یه لحظه به خودت میای میبینی از ته دل خوشحالی
اونم بی دلیل ، بدون فکر به چیزی.
و درست لحظه ی بعدش،
وقتی به این فکر میکنی که چرا خوشبختی،
به این میرسی که دلیلی برای خوشبختی نداری؛
و لبخندت خشک میشه.
خوشبختی به لحظه هات وابستست
نه به چیزایی که داری یا چیزایی که نداری.
اگه یه لحظه هایی حس کردی که چیزی
برای خوشبختی نداری،
صبر کن، اون لحظه ای که از ته دل خوشحالت کنه
میاد سراغت.
درسته چند لحظه‌س،
ولی باور کن، ارزششو داره.', 'Rubika''s Admin', '2022-07-15 20:36:12', 's', 40, 29);
